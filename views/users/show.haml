.row
  .col-md-2
  .col-md-8
    .panel.panel-default
      .panel-body
        .author
          %img.pull-right.thumbnail{ src: user.gravatar }
          %h4.title= user.email

        %hr
        %p.description
          %label Name:
          = user.name
        %p.description
          %label Surname:
          = user.surname
        %p.description
          %label Signed up:
          = user.created_at.strftime('%Y-%m-%d %H:%M:%S')

        %p.text-right
          %a.btn.btn-default{ href: root_url + "/users/#{user.id}/edit" } Edit
  .col-md-2
